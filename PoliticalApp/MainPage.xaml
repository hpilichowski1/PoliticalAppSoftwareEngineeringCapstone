<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PoliticalApp.MainPage"
             Title="Your Civic Hub">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18" BackgroundColor="#F7FAFC">
            <!-- Header -->
            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" ColumnSpacing="12">
                <Frame Grid.RowSpan="2" Padding="12" CornerRadius="12" BackgroundColor="#E6EEF8">
                    <Label Text="🏛️" FontSize="28" />
                </Frame>
                <Label Grid.Column="1" Text="Your Civic Hub" FontSize="28" FontAttributes="Bold" TextColor="#0B3D91" />
                <Label Grid.Column="1" Grid.Row="1" Text="Stay informed and engaged" FontSize="14" TextColor="#4B5563" />
            </Grid>

            <!-- Activity / Stats -->
            <Label Text="Your Activity" FontSize="22" FontAttributes="Bold" Margin="0,12,0,4" />
            <CollectionView ItemsLayout="HorizontalList" HeightRequest="132" SelectionMode="None">
                <CollectionView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Bills Voted: 12</x:String>
                        <x:String>Reps Followed: 5</x:String>
                        <x:String>Score: 78%</x:String>
                    </x:Array>
                </CollectionView.ItemsSource>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="14" Padding="14" Margin="6,4" HasShadow="True" BackgroundColor="#FFFFFF" BorderColor="#D1D5DB">
                            <VerticalStackLayout>
                                <Label Text="📊" FontSize="22" HorizontalOptions="Center" />
                                <Label Text="{Binding .}" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#0B3D91" />
                                <Label Text="Stat" FontSize="12" TextColor="#4B5563" HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Frame>                
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Recent Votes -->
            <Label Text="Recent Votes" FontSize="22" FontAttributes="Bold" Margin="0,12,0,4" />
            <CollectionView SelectionMode="None">
                <CollectionView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>HB 1234 • School Safety Act • Yea</x:String>
                        <x:String>SB 56 • Clean Transit Grant • Nay</x:String>
                        <x:String>Local 22 • Park Revitalization • Abstain</x:String>
                    </x:Array>
                </CollectionView.ItemsSource>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="12" Padding="14" Margin="6,6" HasShadow="True" BackgroundColor="#FFFFFF" BorderColor="#D1D5DB">
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                <VerticalStackLayout>
                                    <Label Text="{Binding .}" FontSize="16" TextColor="#111827" />
                                    <Label Text="Tap to view details" FontSize="12" TextColor="#4B5563" />
                                </VerticalStackLayout>
                                <Label Grid.Column="1" Text="Today" TextColor="#4B5563" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="View All Policies" BackgroundColor="#0B3D91" TextColor="White" CornerRadius="10" HeightRequest="48" />

            <!-- Quick Actions -->
            <Label Text="Quick Actions" FontSize="22" FontAttributes="Bold" Margin="0,12,0,4" />
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Button Text="Find Representatives" Grid.Column="0" CornerRadius="10" HeightRequest="44" BackgroundColor="#1F2937" TextColor="#FFFFFF" />
                <Button Text="Take Alignment Quiz" Grid.Column="1" CornerRadius="10" HeightRequest="44" BackgroundColor="#BF0A30" TextColor="#FFFFFF" />
            </Grid>

            <!-- Tips -->
            <Frame CornerRadius="12" Padding="12" Margin="0,16,0,0" BackgroundColor="#E6EEF8" BorderColor="#D1D5DB">
                <HorizontalStackLayout Spacing="8">
                    <Label Text="💡" FontSize="18" />
                    <Label Text="Tip: Review recent votes to keep your civic score up to date." FontSize="14" TextColor="#1F2937" LineBreakMode="WordWrap" />
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
